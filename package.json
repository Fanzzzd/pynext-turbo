{
  "name": "pynext-turbo",
  "version": "1.0.0",
  "description": "A modern full-stack monorepo with Next.js and FastAPI",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "pnpm lint && pnpm typecheck",
    "clean": "turbo clean",
    "db:generate": "cd apps/api && uv run alembic revision --autogenerate -m",
    "db:migrate": "cd apps/api && uv run alembic upgrade head",
    "dev": "turbo dev",
    "dev:docker": "docker-compose up --build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" && (cd apps/api && uv run ruff format src)",
    "generate:client": "pnpm --filter @pynext-turbo/api schema && openapi-ts --input apps/api/openapi.json --output packages/api-client/src/requests --client @hey-api/client-axios",
    "lint": "turbo lint",
    "postinstall": "cd apps/api && uv sync",
    "typecheck": "turbo typecheck"
  },
  "keywords": [
    "fullstack",
    "monorepo",
    "nextjs",
    "fastapi",
    "turborepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@hey-api/client-axios": "^0.9.1",
    "@hey-api/openapi-ts": "^0.78.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.5"
  }
}